    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="MobileOptimized" content="320")
    meta(name="HandheldFriendly" content="true")
    meta(name="keywords" content="电话交换机,企业即时通讯,融合通信,移动办公软件,工作宝,佳米科技,佳和通信")
    meta(name="description" content="工作宝，集融合通信、企业IM、协同办公于一体，致力于为企业提供智慧独特的移动通信解决方案，助力企业提高沟通效率，驱动业务发展，创造市场优势。")
    meta(name="version" content=VERSION)
    link(rel="icon" type="image/x-icon" href="favicon.ico")
    script(src="https://gzbix-app.mygzb.com/react@16.13.1.min.js")
    script(src="https://gzbix-app.mygzb.com/react-dom@16.13.1.min.js")
    script(src="https://gzbix-app.mygzb.com/mobx@6.3.2.min.js")
    script(src="https://gzbix-app.mygzb.com/moment.min.js")
    script(src="https://gzbix-app.mygzb.com/moment.locale.zh-cn.js")
    script.
      const url = new URL(location.href)
      function searchParam (field) {
        return url.searchParams.get(field) || ''
      }
      // HACK 移动端和客户端的
      function searchMultiParam (fields) {
         return url.searchParams.get(fields[0]) || url.searchParams.get(fields[1]) || ''
      }
      window.APP_ID = searchParam('appId')
      window.APP_NAME = ''
      switch(searchMultiParam(['_lang', 'lang'])) {
        case 'zh-CN': window.APP_NAME = searchParam('zhName') ? searchParam('zhName') : searchParam('appName') ? searchParam('appName') : ""; break;
        case 'zh-TW': window.APP_NAME = searchParam('twName') ? searchParam('twName') : searchParam('appName') ? searchParam('appName') : ""; break;
        case 'en-US': window.APP_NAME = searchParam('enName') ? searchParam('enName') : searchParam('appName') ? searchParam('appName') : ""; break;
        default: window.APP_NAME = searchParam('appName') ? searchParam('appName') : ""; break;
      }
      document.title = window.APP_NAME ? window.APP_NAME : ""
    block head
      title Document
  body
    block content
 